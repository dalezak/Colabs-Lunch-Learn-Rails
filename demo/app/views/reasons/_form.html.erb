<% if reason.errors.any? %>
  <% reason.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert">
    <%= message %>
  </div>
  <% end %>
<% end %>
<%= form_with(model: reason, local: true) do |form| -%>
<div class="card shadow-sm">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <div class="form-group">
        <%= form.label :text, class: "font-weight-bold" %>
        <%= form.text_field :text, placeholder: "Enter text", class: "form-control" %>
      </div>
    </li>
  </ul>
  <div class="card-footer">
    <%= link_to "Cancel", reason, class: 'btn btn-outline-secondary float-left' if reason.persisted? %>
    <%= link_to "Cancel", reasons_path, class: 'btn btn-outline-secondary float-left' if !reason.persisted? %>
    <%= form.submit "Save", class: "btn btn-primary float-right" if reason.persisted? %>
    <%= form.submit "Create", class: "btn btn-primary float-right" if !reason.persisted? %>
  </div>
</div>
<% end %>